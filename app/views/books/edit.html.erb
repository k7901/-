<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book'%>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back","https://16482aac5a524347b4684c1048b7688b.vfs.cloud9.ap-northeast-1.amazonaws.com/books" %>

<% end %>
